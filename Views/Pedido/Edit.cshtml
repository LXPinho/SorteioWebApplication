@model SorteioWebApplication.Models.Pedido

@{
    ViewData["Title"] = "Editar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Edit</h1>

<h4>Pedido</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" readonly="" />
            </div>
            <div class="form-group">
                <label asp-for="ClientePedido.Id" class="control-label"></label>
                <select asp-for="ClientePedido.Id" asp-items="@new SelectList(Model.ListaClientesPedido, nameof(Model.ClientePedido.Id), nameof(Model.ClientePedido.Nome))">
                    <option>Selecionar</option>
                </select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
